<!DOCTYPE HTML>

<html>

<head>
    <title>AI Cover Letter Generator</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="assets/css/main.css" />
</head>

<body class="is-preload homepage">
    <div id="page-wrapper">

        <body>
            <header>
                <h1>User Profile</h1>
            </header>
            <main>
                <div class="banner">
                    <section class="profile-picture">
                        <img src="profile.jpg" alt="Profile Picture">
                    </section>
                </div>
                <!-- ... -->
                <section class="basic-info">
                    <div class="content">
                        <h2>Name</h2>
                        <p>Email Address</p>
                        <p>Job Title/Position</p>
                        <button class="edit-profile-button">Edit Profile</button>
                    </div>
                    <form class="edit-form" style="display: none;">
                        <input type="text" name="name" placeholder="Name">
                        <input type="email" name="email" placeholder="Email Address">
                        <input type="text" name="jobTitle" placeholder="Job Title/Position">
                        <button type="submit">Save</button>
                        <button type="button" class="cancel-edit">Cancel</button>
                    </form>
                </section>
                <!-- ... -->
                <section class="bio">
                    <h3>About Me</h3>
                    <p>Short bio...</p>
                </section>
                <section class="skills">
                    <h3>Skills</h3>
                    <ul>
                        <li>Skill 1</li>
                        <li>Skill 2</li>
                        <li>Skill 3</li>
                    </ul>
                </section>
                <section class="work-experience">
                    <h3>Work Experience</h3>
                    <!-- Add work experience cards here -->
                </section>
                <section class="education">
                    <h3>Education</h3>
                    <!-- Add education cards here -->
                </section>
                <section class="certifications">
                    <h3>Certifications & Achievements</h3>
                    <!-- Add certification cards here -->
                </section>
                <section class="social-media">
                    <h3>Connect with me</h3>
                    <!-- Add social media icons and links here -->
                </section>
            </main>
            <script src="assets/js/profile.js"></script>
        </body>

</html>